<div class="registration-form">
  <h3 class="text-center">Форма входу</h3>
  <%= form_with model: @user do |form| %>
    <div class="form-group">
      <%= form.text_field  :email, class: "form-control item", maxlength: "15", minlength: "4", pattern: "^[a-zA-Z0-9_.-]*$", placeholder: "Логін" %>
    </div>

    <div class="form-group">
      <%= form.password_field :password, class: "form-control item", minlength: "6", id: "password", placeholder: "Пароль" %>
    </div>

    <input type="checkbox" id="remember" name="remember">
    <label for="remember">Запам'ятати мене</label>

    <div class="form-group">
      <%= form.submit "Увійти в аккаунт", class:"btn btn-primary btn-block create-account" %>
        
      <p class="text-center">
        <%= link_to "Зареєструватись", register_path %>
      </p>

    </div>
  <% end %>
</div>
